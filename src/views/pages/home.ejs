<!-- CSS container for all elements-->
<div class="container-fluid m-0 p-0">

<!-- header-->
<h1>Random Chord progression</h1>

<!-- displays key that user selects -->
<h2 id="keyDisplay">Key: C</h2>
<h2 id="scaleDisplay">Scale: Ionian</h2>

<!-- id="romanNum" comes from genRomanNumeral function in romanNumGen.js-->
<!-- onclick runs function genRomanNumeral() from romanNumGen.js-->
<div id="chordProgressionDisplay"> </div>
<button onclick="genRomanNumeral()">Randomize root notes</button>
<button onclick="genAlphabet()">Randomize root notes (Alphabet)</button>
<button onclick="incrementNumChords()">Click to change number of progressions (1-7)</button>
<button onclick="genInversions()">Randomize inversions</button>
<button onclick="clearInversions()">Clear inversions</button>
<button onclick="genBassNotes()">Randomize bass notes</button>

<!-- set of buttons that let the user select what key they want to be in-->
<br/>
<br/>
<button onclick="setKey('C')" data-key="C">C</button>
<button onclick="setKey('C#')" data-key="C#">C#/Db</button>
<button onclick="setKey('D')" data-key="D">D</button>
<button onclick="setKey('D#')" data-key="D#">D#/Eb</button>
<button onclick="setKey('E')" data-key="E">E</button>
<button onclick="setKey('F')" data-key="F">F</button>
<button onclick="setKey('F#')" data-key="F#">F#/Gb</button>
<button onclick="setKey('G')" data-key="G">G</button>
<button onclick="setKey('G#')" data-key="G#/Ab">G#/Ab</button>
<button onclick="setKey('A')" data-key="A">A</button>
<button onclick="setKey('A#')" data-key="A#">A#/Bb</button>
<button onclick="setKey('B')" data-key="B">B</button>

<br/>
<p id="wordDisplay"></p>

<!-- set of buttons that let the user select what scale they want to be in (In order of degrees)-->
<br/>
<br/>
<button onclick="setScale('Ionian (Major)')" data-key="Ionian (Major)">Ionian</button>
<button onclick="setScale('Dorian')" data-key="Dorian">Dorian</button>
<button onclick="setScale('Phrygian')" data-key="Phrygian">Phrygian</button>
<button onclick="setScale('Lydian')" data-key="Lydian">Lydian</button>
<button onclick="setScale('Mixolydian')" data-key="Mixolydian">Mixolydian</button>
<button onclick="setScale('Aeolian (Minor)')" data-key="Aeolian (Minor)">Aeolian</button>
<button onclick="setScale('Locrain')" data-key="Locrain">Locrain</button>
